/*
 * Azure Firewall Rule Collection for Active Directory
 */
[
  {
    "ruleCollectionType": "FirewallPolicyFilterRuleCollection",
    "action": {
      "type": "Allow"
    },
    "rules": [
      {
        "ruleType": "NetworkRule",
        "name": "HTTP",
        "ipProtocols": ["TCP"],
        "sourceAddresses": ["{{managementSubnetRange}}"],
        "destinationAddresses": ["*"],
        "destinationPorts": [
          "80", // HTTP
          "443" // HTTPS
        ]
      }
    ],
    "name": "InternetAccess",
    "priority": 150
  }
]
